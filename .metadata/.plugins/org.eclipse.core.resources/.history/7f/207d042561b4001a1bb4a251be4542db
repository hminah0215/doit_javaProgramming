package loopexample;

public class Test4 {
	public static void main(String[] args) {
//		*
//		***
//		*****
//		*******
		
		for(int i = 0; i < 5 ; i++) {
			int star = 4;
			for(int j = 0; j < star-i; j++) {
				System.out.println(" ");
			}
			for(int k=0; k <= i; k++) {
				if(k == 0) {
					System.out.println("*");
				}else {
					System.out.println("**");
				}
			}
			System.out.println();
		}
		
	}
}
